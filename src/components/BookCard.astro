---
interface Props {
  title: string;
  author: string;
  isbn?: string;
}

const { title, author, isbn } = Astro.props;
const coverUrl = isbn
  ? `https://covers.openlibrary.org/b/isbn/${isbn}-M.jpg`
  : null;
---

<div class="book-card">
  <div class="book-cover">
    {coverUrl ? (
      <img
        src={coverUrl}
        alt={`Cover of ${title}`}
        loading="lazy"
        onerror="this.style.display='none';this.nextElementSibling.style.display='flex';"
      />
      <div class="cover-fallback">
        <span>{title.charAt(0)}</span>
      </div>
    ) : (
      <div class="cover-fallback">
        <span>{title.charAt(0)}</span>
      </div>
    )}
  </div>
  <div class="book-info">
    <h3 class="book-title">{title}</h3>
    <p class="book-author">{author}</p>
  </div>
</div>

<style>
  .book-card {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .book-cover {
    position: relative;
    aspect-ratio: 2/3;
    background: var(--code-bg);
    border-radius: 3px;
    overflow: hidden;
  }

  .book-cover img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .cover-fallback {
    display: none;
    width: 100%;
    height: 100%;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, var(--accent) 0%, var(--accent-hover) 100%);
    color: var(--bg);
    font-size: 2rem;
    font-weight: 600;
  }

  .book-cover:not(:has(img)) .cover-fallback,
  .cover-fallback:only-child {
    display: flex;
  }

  .book-info {
    text-align: center;
  }

  .book-title {
    font-size: 0.9rem;
    font-weight: 600;
    margin: 0;
    line-height: 1.3;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .book-author {
    font-size: 0.8rem;
    color: var(--muted);
    margin: 0.25rem 0 0 0;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
